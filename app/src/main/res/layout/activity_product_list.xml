<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/album_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:gravity="center_vertical"
            android:text="Walmart"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/card_shadow"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout">

        <RelativeLayout
            android:id="@+id/p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp">

            <ImageView
                android:id="@+id/i_p_1"
                android:src="@mipmap/silk_almond"
                android:layout_width="80dp"
                android:layout_height="75dp"></ImageView>

            <TextView
                android:textColor="@color/colorBlack"
                android:id="@+id/p_title_1"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/i_p_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SILK Almond Beverage, Unsweetened Original, Dairy-Free, 1.89L"></TextView>

            <TextView
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/i_p_1"
                android:layout_below="@id/p_title_1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1.99"></TextView>

            <ImageView
                android:id="@+id/selectBtn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/empty"
                android:layout_below="@+id/p_title_1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                ></ImageView>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>