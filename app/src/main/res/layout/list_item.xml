<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:layout_margin="10dp"
        android:elevation="2dp">

        <RelativeLayout
            android:background="@drawable/card_shadow"
            android:id="@+id/p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp">

            <ImageView
                android:id="@+id/i_p_1"
                android:layout_width="80dp"
                android:layout_height="78dp"
                android:src="@mipmap/silk_almond"></ImageView>

            <TextView
                android:id="@+id/p_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/i_p_1"
                android:text="SILK Almond Beverage, Unsweetened Original, Dairy-Free, 1.89L"
                android:textColor="@color/colorBlack"></TextView>

            <TextView
                android:id="@+id/i_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_title_1"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/i_p_1"
                android:text="$1.99"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"></TextView>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>